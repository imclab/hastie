#!/usr/bin/env ruby
# -*- mode: ruby -*-

require 'hastie/report_generator'
require 'hastie/report_publisher'

command = ARGV.shift

case command
when "start","create"
  Hastie::ReportGenerator.start ARGV
when "publish"
  Hastie::ReportPublisher.start ARGV
else
  puts "Not a recognized command: #{command}"
end
